{
  "mcpServers": {
    "wifi-cam": {
      "command": "uv",
      "args": [
        "--directory",
        "/path/to/wifi-cam-mcp",
        "run",
        "wifi-cam-mcp"
      ],
      "env": {
        "TAPO_CAMERA_HOST": "192.168.1.100",
        "TAPO_USERNAME": "your-email@example.com",
        "TAPO_PASSWORD": "your-tapo-password"
      }
    }
  }
}
